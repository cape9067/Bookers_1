
  <h1>Books</h1>
  <table class="table">
  <tr>
     <th>Title</th>
     <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%= link_to "Show", book_path(book) %></td>
   <td><%= link_to "Edit", edit_book_path(book) %></td>
   <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  <% end %> 
  </tr>
  </table>

  <h2>New Book</h2>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> erros prohibited this book from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <%= form_with model: @book, url: '/books', local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Body</h4>
   <%= f.text_area :body %>

   <%= f.submit 'New Book' %>
  <% end %>
